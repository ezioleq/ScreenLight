<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/toggleButton"
        android:src="@drawable/power_settings_new"
        android:contentDescription="@string/toggle_button_description"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:padding="50dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/brightnessLevelTextView"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:textSize="48dp"
        android:textStyle="bold"
        android:text="100"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_gravity="center"
            android:splitTrack="false"
            android:progressDrawable="@drawable/brightness_seekbar"
            android:thumb="@drawable/brightness_seekbar_thumb"
            android:min="0"
            android:max="100"
            android:thumbOffset="0dp"
            android:progress="50" />

    </LinearLayout>

</RelativeLayout>
